<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>webapp</groupId>
  <artifactId>webapp</artifactId>
  <packaging>war</packaging>
  <version>0.1</version>
  <name>welovecoding | webapp</name>

  <repositories>
    <repository>
      <id>eap</id>
      <url>http://maven.repository.redhat.com/techpreview/all</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>eap</id>
      <url>http://maven.repository.redhat.com/techpreview/all</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <properties>
    <!-- Global settings -->
    <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
    <hibernate.validator.version>5.1.3.Final</hibernate.validator.version>
    <hibernate.version>4.3.8.Final</hibernate.version>
    <jackson.version>2.5.1</jackson.version>
    <javaee.version>7.0</javaee.version>
    <javax.servlet.version>3.1.0</javax.servlet.version>
    <jstl.version>1.2</jstl.version>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    <!-- Spring -->
    <spring.version>4.1.5.RELEASE</spring.version>
    <spring.data.version>1.8.0.RELEASE</spring.data.version>
    <spring.security.version>3.2.7.RELEASE</spring.security.version>
    <spring.social.version>1.1.0.RELEASE</spring.social.version>

    <!-- Local settings -->
    <wlc.database.driver.classname>com.mysql.jdbc.Driver</wlc.database.driver.classname>
    <wlc.database.url>jdbc:mysql://localhost:3306/webapp</wlc.database.url>
    <wlc.database.username>root</wlc.database.username>
    <wlc.database.password></wlc.database.password>

    <!-- Social -->
    <wlc.social.twitter.key>twitter_key</wlc.social.twitter.key>
    <wlc.social.twitter.secret>twitter_secret</wlc.social.twitter.secret>
    <wlc.social.facebook.id>facebook_id</wlc.social.facebook.id>
    <wlc.social.facebook.secret>facebook_secret</wlc.social.facebook.secret>
  </properties>

